# Server Configuration
PORT=8000
HOST=0.0.0.0
DEBUG=false

# CORS Settings (comma-separated for multiple origins)
ALLOWED_ORIGINS=*

# Redis Cache (optional - set to false for deployment platforms without Redis)
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379/0

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
BATCH_RATE_LIMIT_PER_MINUTE=50

# Translation Settings
MAX_TEXT_LENGTH=5000
MAX_BATCH_SIZE=10
TRANSLATION_TIMEOUT=30

# Logging
LOG_LEVEL=INFO